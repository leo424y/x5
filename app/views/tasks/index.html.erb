<div class="x_panel">
  <div class="x_content">
    <%= render 'search' %>
    <hr>
    <%= render 'priority_sorting' %>
    <hr>
    <%= button_to t('new'), new_task_path, method: :get %>
    <hr>
    <%= render 'tag_bar' %>
    <hr>    
    <table class="table table-striped table-bordered">
      <thead>
      <% if @tasks.count > 0 %>
        <tr>
          <th><%= t('content') %></th>
          <th><%= t('end_time') %></th>
          <th><%= t('state') %></th>
          <th><%= t('priority') %></th>
          <th><%= t('user') %></th>
          <th><%= t('tags') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <% end %>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.content %></td>
            <td><%= task.end_time %></td>
            <td><%= task.state %></td>
            <td><%= task.priority %></td>
            <td><%= task.user.name %></td>
            <td><%=raw tag_links(task.all_tags)%></td>
            <td><%= link_to t('edit'), edit_task_path(task) %></td>
            <td><%= link_to t('destroy'), task, method: :delete, data: { confirm: t('Are you sure') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @tasks %>
  </div>
</div>

<br>