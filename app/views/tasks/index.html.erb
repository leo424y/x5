<p id="notice"><%= notice %></p>

<h1><%= t('Tasks')%></h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= t(task.content) %></td>
        <td><%= t(task.end_time) %></td>
        <td><%= link_to t('Edit'), edit_task_path(task) %></td>
        <td><%= link_to t('Destroy'), task, method: :delete, data: { confirm: t('Are you sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New'), new_task_path %>
