<% if notice %>
<div class="x_panel">
  <div class="x_content">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<% end %>

<div class="x_panel">
  <div class="x_content">
    <h1><%= link_to t('Tasks'), tasks_path %></h1>
  </div>
</div>

<div class="x_panel">
  <div class="x_content">
    <%= render 'search' %>
    <hr>
    <%= render 'priority_sorting' %>
    <hr>
    <%= button_to t('New'), new_task_path, method: :get %>
    <hr>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t('content') %></th>
          <th><%= t('end_time') %></th>
          <th><%= t('state') %></th>
          <th><%= t('priority') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.content %></td>
            <td><%= task.end_time %></td>
            <td><%= task.state %></td>
            <td><%= task.priority %></td>
            <td><%= link_to t('edit'), edit_task_path(task) %></td>
            <td><%= link_to t('destroy'), task, method: :delete, data: { confirm: t('Are you sure') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @tasks %>
  </div>
</div>

<br>